<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.dangnhap.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvHeader"
        android:text="Màn Hình Đăng Nhập"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#b20707"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLoiChao"
        android:text="ĐHCN1A"
        android:textSize="20dp"
        android:layout_below="@+id/tvHeader"
        android:layout_centerHorizontal="true"
        android:textColor="#0a1847"
        />

    <EditText
        android:id="@+id/edTendangnhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:hint="Tên Đăng Nhập"
        android:layout_below="@+id/tvLoiChao"
        android:layout_marginTop="17dp" />
    <EditText
        android:inputType="textPassword"
        android:id="@+id/edMatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:hint="Mật Khẩu"
        android:layout_below="@+id/edTendangnhap"
        android:layout_marginTop="17dp" />
    <EditText
        android:id="@+id/edEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:hint="Nhập Email"
        android:layout_below="@+id/edMatkhau"
        android:layout_marginTop="17dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edEmail"
        android:layout_marginTop="40dp"
        android:text="Đăng Nhập"
        android:id="@+id/btDangNhap"
        />

</RelativeLayout>
